                    <Slider x:Name="difficultySlider" Grid.Column="2" Orientation="Horizontal" Margin="3" Maximum="68" Minimum="2" ValueChanged="Slider_ValueChanged" SmallChange="0"></Slider>
                </Grid>
                <CheckBox x:Name="caseSensitive" Grid.Column="6" Grid.Row="0" Margin="3" FontSize="14">
                    Case Sensitive
                </CheckBox>
                <Button x:Name="startButton" Grid.Column="4" Grid.Row="2" Click="StartButton_Click">
                    Start
                </Button>
                <Button x:Name="stopButton" Grid.Column="6" Grid.Row="2" IsEnabled="False" Click="StopButton_Click">
                    Stop
                </Button>
            </Grid>
        </Grid>
        <DockPanel Margin="3" >
            <UniformGrid DockPanel.Dock="Left" >
                <UniformGrid.Rows>2</UniformGrid.Rows>
                <TextBlock x:Name="Input" FontSize="20" FontFamily="Consolas" Background="LightPink"/>
                <TextBlock >
                    <TextBlock.Background>
                        <VisualBrush Visual="{Binding ElementName=Input}"/>
                    </TextBlock.Background>
                </TextBlock>
            </UniformGrid>
            <TextBlock x:Name="Lefted" DockPanel.Dock="Right" FontSize="20" FontFamily="Consolas" Background="SkyBlue">
            </TextBlock>
        </DockPanel>
    </DockPanel>
</Window>
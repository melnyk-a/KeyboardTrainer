                    <TextBlock x:Name="speed" Margin="3" FontSize="14"   FontWeight="ExtraBold">0</TextBlock>
                    <TextBlock Margin="3" FontSize="14" >chars/min</TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" >
                    <TextBlock Margin="3" FontSize="14" >Fails</TextBlock>
                    <TextBlock x:Name="fails" Margin="3" FontSize="14"   FontWeight="ExtraBold">0</TextBlock>
                </StackPanel>
                <Grid Grid.Column="4" Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="3"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" >
                        <TextBlock Margin="3" FontSize="14" >Difficulty</TextBlock>
                        <TextBlock Margin="3" FontSize="14" FontWeight="ExtraBlack" >0</TextBlock>
                    </StackPanel>
                    <Slider Grid.Column="2" Orientation="Horizontal" Margin="3"></Slider>
                </Grid>
                <CheckBox Grid.Column="6" Grid.Row="0" Margin="3" FontSize="14">
                    Case Sensitive
                </CheckBox>
                <Button Grid.Column="4" Grid.Row="2">
                    Start
                </Button>
                <Button Grid.Column="6" Grid.Row="2">
                    Stop
                </Button>
            </Grid>



        </Grid>


        <DockPanel Margin="3" >
            <UniformGrid  DockPanel.Dock="Left" >
                <UniformGrid.Rows>2</UniformGrid.Rows>
                <TextBlock  x:Name="Input" FontSize="20" FontFamily="Consolas" Background="LightPink">
                4546</TextBlock>
                <TextBlock >
                    <TextBlock.Background>
                        <VisualBrush Visual="{Binding ElementName=Input}"></VisualBrush>
                    </TextBlock.Background>
                </TextBlock>
            </UniformGrid>
            <TextBlock   x:Name="Lefted" DockPanel.Dock="Right" FontSize="20" FontFamily="Consolas" Background="SkyBlue">
            </TextBlock>
        </DockPanel>



    </DockPanel>
</Window>